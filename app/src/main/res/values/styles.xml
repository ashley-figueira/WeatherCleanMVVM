<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Material" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_material_blue</item>
        <item name="colorPrimaryDark">@color/color_material_blue_dark</item>
        <item name="colorAccent">@color/color_material_blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorButtonNormal">@color/color_material_blue_dark</item>
        <item name="android:textColorPrimary">@color/oil</item>
        <item name="android:textColorHint">@color/iron</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/color_material_blue_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/color_material_blue_dark</item>
    </style>

</resources>
